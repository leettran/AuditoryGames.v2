<UserControl x:Class="AuditoryGames.GameFramework.Page"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" Width="800" Height="600">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40" MaxHeight="40" MinHeight="40" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Canvas x:Name="LayoutRoot" Background="#FF0043AB" Grid.Row="1">
        </Canvas>
        <MediaElement x:Name="AudioPlayer" AutoPlay="False" Visibility="Collapsed" Margin="558,0,0,0" Width="30" Height="30" Canvas.Left="-429" Canvas.Top="4" />
        <Canvas x:Name="LayoutTitle" Background="White" Grid.Row="0" />
    </Grid>

        
</UserControl>
