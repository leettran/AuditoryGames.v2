<UserControl x:Class="LSRI.Submarine.SubmarineOptions"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:sdk="http://schemas.microsoft.com/winfx/2006/xaml/presentation/sdk" 
    xmlns:toolkit="http://schemas.microsoft.com/winfx/2006/xaml/presentation/toolkit"  
    xmlns:data="clr-namespace:LSRI.AuditoryGames.GameFramework.Data;assembly=GameFramework"
    xmlns:gamefw="clr-namespace:LSRI.AuditoryGames.GameFramework.UI;assembly=GameFramework"
    mc:Ignorable="d"
    d:DesignHeight="465" d:DesignWidth="668" Loaded="UserControl_Loaded" FontSize="9" FontWeight="Normal" FontStretch="Normal">

    <UserControl.Resources>
        <data:UserModelContainer x:Key="ContainerObject" />
        <data:AuditoryModel x:Key="StaircaseObject" />
    </UserControl.Resources>


    <Grid x:Name="LayoutRoot">
        <gamefw:SuperDataForm Height="414" HorizontalAlignment="Left" Name="_xPeople" VerticalAlignment="Top" Width="284" AutoCommit="False" AutoEdit="True" CommandButtonsVisibility="Navigation, Commit, Cancel" CancelButtonContent="Cancel" CommitButtonContent="Commit" HeaderVisibility="Collapsed" Header="User Profiles" AutoGenerateFields="True" ItemsSource="{Binding Source={StaticResource ContainerObject}, Path=UserModels}" DataContext="{Binding}" UseLayoutRounding="True">
        </gamefw:SuperDataForm>
        <gamefw:SuperDataForm 
            AutoCommit="False" AutoEdit="True" AutoGenerateFields="True" 
            CancelButtonContent="Cancel" 
            CommandButtonsVisibility="Commit, Cancel, Navigation" 
            CommitButtonContent="Commit" 
            Header="Staircase" 
            HeaderVisibility="Collapsed" 
            Height="170" 
            HorizontalAlignment="Left" 
            ItemsSource="{Binding Source={StaticResource StaircaseObject}}" Margin="308,0,0,0" Name="_xStaircase" 
            UseLayoutRounding="True" VerticalAlignment="Top" Width="284" DataContext="{Binding Source={StaticResource StaircaseObject}}" />

        <Button Content="OK" Height="23" HorizontalAlignment="Left" Margin="12,431,0,0" Name="btnOK" VerticalAlignment="Top" Width="75" Click="btnOK_Click" />
    </Grid>
</UserControl>
