<UserControl x:Class="TestSequencer.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300" d:DesignWidth="400">

    <Canvas Margin="0 0 0 0" Background="#FF333333" >
        <Rectangle Canvas.Left="38" Canvas.Top="67" Height="122" Name="rectangle1" Stroke="Black" StrokeThickness="1" Width="132" Fill="#FFEFCACA"></Rectangle>
        <Button Canvas.Left="38" Canvas.Top="22" Height="30" Width="335" Click="Button_Click">
            <Button.Content>
                <Image Source="media/play.png" x:Name="playImage" Height="20" Width="20"/>
            </Button.Content>
        </Button>
        <MediaElement x:Name="media" AutoPlay="False" Width="50" Height="50" Canvas.Left="0" Canvas.Top="250" />
        <RadioButton GroupName="First Group" Canvas.Left="50" Canvas.Top="93" Content="3Interval" Height="16" Name="c3I" Checked="radioButton1_Checked" IsChecked="True" />
        <RadioButton GroupName="First Group" Canvas.Left="50" Canvas.Top="115" Content="2Intervals" Height="16" Name="c2I" Checked="radioButton1_Checked"/>
    </Canvas>


</UserControl>
